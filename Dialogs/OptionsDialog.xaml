        <TextBlock HorizontalAlignment="Left" Margin="10,19,0,0" TextWrapping="Wrap" Text="Theme:" VerticalAlignment="Top"/>
        <ComboBox Name="ThemeCombeBox" SelectedIndex="0" Margin="54,16,10,0" VerticalAlignment="Top">
            <ComboBoxItem>Modern</ComboBoxItem>
            <ComboBoxItem>Blue</ComboBoxItem>
            <ComboBoxItem Content="Silver"></ComboBoxItem>
            <ComboBoxItem>Black</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>