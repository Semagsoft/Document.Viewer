<Fluent:RibbonWindow x:Class="MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
    Title="Document.Viewer" Icon="Document.Viewer.ico" Height="480" Width="640" MinWidth="500" MinHeight="400">
    <DockPanel>
        <Fluent:Ribbon x:Name="MainBar" DockPanel.Dock="Top">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage Name="FileMenuItem">
                    <Fluent:BackstageTabControl>
                        <Fluent:Button Name="OpenMenuItem" Header="Open" Icon="Images/File/open16.png">
                            <Fluent:Button.ToolTip>
                                <Fluent:ScreenTip Title="Open (Ctrl + O)" Text="Open document" Image="Images\File\open48.png" />
                            </Fluent:Button.ToolTip>
                        </Fluent:Button>
                        <Fluent:BackstageTabItem>
                            <Fluent:BackstageTabItem.Header>
                                <TextBlock Text="Recent" />
                            </Fluent:BackstageTabItem.Header>
                            <StackPanel Name="RecentDocumentsList" />
                        </Fluent:BackstageTabItem>
                        <Fluent:SeparatorTabItem />
                        <Fluent:BackstageTabItem Name="ExportMenuItem" Header="Export" IsEnabled="False">
                            <Fluent:BackstageTabItem.ToolTip>
                                <Fluent:ScreenTip Title="Export" Text="Export document" />
                            </Fluent:BackstageTabItem.ToolTip>
                            <StackPanel>
                                <Fluent:Button Name="ExportTextFileMenuItem" Header="Text File" Icon="Images/File/Export/txt16.png" Foreground="Black">
                                    <Fluent:Button.ToolTip>
                                        <Fluent:ScreenTip Title="Text File" Text="Export text file" Image="Images\File\Export\txt48.png" />
                                    </Fluent:Button.ToolTip>
                                </Fluent:Button>
                                <Fluent:Button Visibility="Collapsed" Name="ExportImageMenuItem" Header="_Image" Icon="Images/image16.png">
                                    <Fluent:Button.ToolTip>
                                        <Fluent:ScreenTip Title="Image" Text="Export Image" Image="Images/image32.png" />
                                    </Fluent:Button.ToolTip>
                                </Fluent:Button>
                                <Fluent:Button Visibility="Collapsed" Name="ExportAudioMenuItem" Header="_Audio">
                                    
                                </Fluent:Button>
                            </StackPanel>
                        </Fluent:BackstageTabItem>
                        <Fluent:SeparatorTabItem />
                        <Fluent:Button Name="PrintMenuItem" Header="Print" Icon="Images/File/print16.png" IsEnabled="False">
                            <Fluent:Button.ToolTip>
                                <Fluent:ScreenTip Title="Print (Ctrl + P)" Text="Print document" Image="Images/File/print48.png" />
                            </Fluent:Button.ToolTip>
                        </Fluent:Button>
                        <Fluent:SeparatorTabItem />
                        <Fluent:Button Name="ExitMenuItem" Icon="Images/File/exitapp16.png" Header="Exit">
                            <Fluent:Button.ToolTip>
                                <Fluent:ScreenTip Title="Exit (Alt + F4)" Text="Close Document.Viewer" Image="Images/File/exitapp48.png" />
                            </Fluent:Button.ToolTip>
                        </Fluent:Button>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
            <Fluent:Ribbon.QuickAccessItems>
                <Fluent:QuickAccessMenuItem Header="Open" Icon="Images/File/open16.png" IsChecked="True">
                    <Fluent:Button Name="OpenButton" Icon="Images/File/open16.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Open (Ctrl + O)" Text="Open document" Image="Images/File/open48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>
                <Fluent:QuickAccessMenuItem Header="Print" Icon="Images/File/print16.png" IsChecked="True">
                    <Fluent:Button Name="PrintButton" IsEnabled="False" Icon="Images/File/print16.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Print (Ctrl + P)" Text="Print document" Image="Images\File\print48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>
            </Fluent:Ribbon.QuickAccessItems>
            <Fluent:RibbonTabItem Header="Edit">
                <Fluent:RibbonGroupBox Name="ClipboardGroup" Header="Clipboard" IsEnabled="False">
                    <Fluent:Button Name="CopyMenuItem" Header="Copy" LargeIcon="Images/Edit/copy32.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Copy (Ctrl + C)" Text="Copy to clipboard" Image="Images/Edit/copy48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                    <Fluent:Button Name="SelectAllMenuItem" Header="Select All" LargeIcon="Images/Edit/selectall32.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Select All (Ctrl + A)" Text="Select all of the document" Image="Images/Edit/selectall48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <Fluent:RibbonTabItem Header="View">
                <Fluent:RibbonGroupBox Name="ZoomGroup" Header="Zoom" IsEnabled="False">
                    <Fluent:Button Name="ZoomInMenuItem" Header="Zoom In" LargeIcon="Images/View/zoomin32.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Zoom In" Text="Zoom in on document" Image="Images/View/zoomin48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                    <Fluent:Button Name="ZoomOutMenuItem" Header="Zoom Out" LargeIcon="Images/View/zoomout32.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Zoom Out" Text="Zoom out of document" Image="Images/View/zoomout48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                    <Fluent:Button Name="ResetZoomMenuItem" Header="Reset Zoom" LargeIcon="Images/View/resetzoom32.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Reset Zoom" Text="Reset document zoom" Image="Images/View/resetzoom48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <Fluent:RibbonTabItem Header="Tools">
                <Fluent:RibbonGroupBox Header="Tools">
                    <Fluent:Button Name="SpeechMenuItem" Header="Speech" LargeIcon="Images/Tools/speech32.png" IsEnabled="False">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Speech" Text="Read via Text to Speech" Image="Images/Tools/speech48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Options">
                    <Fluent:Button Name="OptionsMenuItem" Header="Options" LargeIcon="Images/Tools/options32.png">
                        <Fluent:Button.ToolTip>
                            <Fluent:ScreenTip Title="Options" Text="Show the Options dialog" Image="Images/Tools/options48.png" />
                        </Fluent:Button.ToolTip>
                    </Fluent:Button>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <Fluent:Ribbon.ToolBarItems>
                <Fluent:Button Name="OnlineHelpMenuItem" Icon="Images/Help/onlinehelp16.png" SizeDefinition="Small">
                    <Fluent:Button.ToolTip>
                        <Fluent:ScreenTip Title="Online Help" Text="Get help online" Image="Images/Help/onlinehelp48.png" />
                    </Fluent:Button.ToolTip>
                </Fluent:Button>
                <Fluent:Button Name="WebsiteMenuItem" Icon="Images/Help/website16.png" SizeDefinition="Small">
                    <Fluent:Button.ToolTip>
                        <Fluent:ScreenTip Title="Website" Text="Visit website" Image="Images/Help/website48.png" />
                    </Fluent:Button.ToolTip>
                </Fluent:Button>
                <Fluent:Button Name="DonateMenuItem" Icon="Images/Help/donate16.png" SizeDefinition="Small">
                    <Fluent:Button.ToolTip>
                        <Fluent:ScreenTip Title="Donate" Text="Donate to Semagsoft" Image="Images/Help/donate48.png" />
                    </Fluent:Button.ToolTip>
                </Fluent:Button>
                <Fluent:Button Name="AboutMenuItem" Icon="Images/Help/about16.png" SizeDefinition="Small">
                    <Fluent:Button.ToolTip>
                        <Fluent:ScreenTip Title="About" Text="About Document.Viewer" Image="Images/Help/about48.png" />
                    </Fluent:Button.ToolTip>
                </Fluent:Button>
            </Fluent:Ribbon.ToolBarItems>
        </Fluent:Ribbon>
        <Grid Name="ContentBox" Background="White">
            <FlowDocumentReader Name="DocumentViewer" HorizontalAlignment="Stretch" ViewingMode="Scroll" />
            <DocumentViewer Visibility="Collapsed" Name="XpsViewer" />
        </Grid>
    </DockPanel>
</Fluent:RibbonWindow>